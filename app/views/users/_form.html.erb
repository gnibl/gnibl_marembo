<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div align="center" style="width: 50%">    
    <%= f.text_field :username, :class => 'input-option', :placeholder => 'Enter your username' %>
    <br/>
    <%= f.text_field :email, :class => 'input-option-hidden', :placeholder => 'Enter your email address', :id => 'user_email_address' %>
    <br/>
    <%= f.password_field :password, :class => 'input-option', :placeholder => 'Enter your password' %>
    <br/>
    <br/>
    <div align="center" style="width: 100%" class="actions">
      <%= f.submit :class => 'submit-button', :value => 'login'%>
    </div>
    <div>
      <%= image_tag(image_path('facebook.jpg'), :class => 'social-image-option')%>
      <%= image_tag(image_path('twitter.jpg'), :class => 'social-image-option')%>
    </div>
  </div>
<% end %>
